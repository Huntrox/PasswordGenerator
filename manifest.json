{
  "manifest_version": 3,
  "name": "Random Password Generator",
  "description": "Generate random password with a slider to control the character length",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "clipboardWrite"
  ],
  "content_security_policy": {
    "script-src": "self"
  },
  "icons": {
    "16": "imgs/icon-16.png",
    "48": "imgs/icon-48.png",
    "128": "imgs/icon-128.png"
  }
}